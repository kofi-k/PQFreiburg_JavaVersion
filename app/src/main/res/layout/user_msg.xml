<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="end"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--text view for displaying user message-->
        <TextView
            android:id="@+id/idTVUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:padding="3dp"
            android:text="@string/user_message"
             />

        <!--we are displaying user icon-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userChatPhoto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            app:civ_border_color="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/user2"
            app:civ_circle_background_color="@android:color/transparent" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
